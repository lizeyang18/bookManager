<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>BookListServlet</servlet-name>
        <servlet-class>com.bookManager.web.servlet.BookListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddBookServlet</servlet-name>
        <servlet-class>com.bookManager.web.servlet.AddBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>findBookByIdServlet</servlet-name>
        <servlet-class>com.bookManager.web.servlet.findBookByIdServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateBookServlet</servlet-name>
        <servlet-class>com.bookManager.web.servlet.UpdateBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>delBookServlet</servlet-name>
        <servlet-class>com.bookManager.web.servlet.delBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>delAllBooksServlet</servlet-name>
        <servlet-class>com.bookManager.web.servlet.delAllBooksServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchBooksServlet</servlet-name>
        <servlet-class>com.bookManager.web.servlet.SearchBooksServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PageServlet</servlet-name>
        <servlet-class>com.bookManager.web.servlet.PageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FindBookInfoServlet</servlet-name>
        <servlet-class>com.bookManager.web.servlet.FindBookInfoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>searchBookAjaxServlet</servlet-name>
        <servlet-class>com.bookManager.web.servlet.searchBookAjaxServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addCartServlet</servlet-name>
        <servlet-class>com.bookManager.web.servlet.addCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>changeNumServlet</servlet-name>
        <servlet-class>com.bookManager.web.servlet.changeNumServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BookListServlet</servlet-name>
        <url-pattern>/BookListServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddBookServlet</servlet-name>
        <url-pattern>/AddBookServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>findBookByIdServlet</servlet-name>
        <url-pattern>/findBookByIdServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateBookServlet</servlet-name>
        <url-pattern>/UpdateBookServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>delBookServlet</servlet-name>
        <url-pattern>/delBookServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>delAllBooksServlet</servlet-name>
        <url-pattern>/delAllBooksServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchBooksServlet</servlet-name>
        <url-pattern>/SearchBooksServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PageServlet</servlet-name>
        <url-pattern>/PageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FindBookInfoServlet</servlet-name>
        <url-pattern>/FindBookInfoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>searchBookAjaxServlet</servlet-name>
        <url-pattern>/searchBookAjaxServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addCartServlet</servlet-name>
        <url-pattern>/addCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>changeNumServlet</servlet-name>
        <url-pattern>/changeNumServlet</url-pattern>
    </servlet-mapping>
</web-app>